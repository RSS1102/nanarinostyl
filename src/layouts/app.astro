---
import "@stylus/index.styl";
import prefix from "src/scripts/server/prefix";
interface Props {
    title?: string;
}
const { title } = Astro.props;
---

<html lang="zh-CN">
    <head>
        <meta charset="UTF-8" />
        <title>{title || prefix}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body>
        <slot />
    </body>
</html>

<style lang="stylus">
    body
        width 100%
        height 100vh
        min-width 320px
        min-height 100vh
        display flex
        flex-direction column
        padding 0
        margin 0
</style>
