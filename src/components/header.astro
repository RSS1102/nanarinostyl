---
import prefix from "src/scripts/server/prefix";
import Switch from "./switch/index.astro";
import { Icon } from "astro-icon";
interface Props {
    href?: string;
}
const { href } = Astro.props;
---

<header class={`${prefix}-layout-header`}>
    <a href={href || "/"} class="logo">
        <img src="/favicon.svg" alt="logo" class="logo" />
    </a>
    <Switch id="header-theme-switch">
        <Icon name="general/outline/sun" alt="sun" />
        <Icon name="general/outline/moon" alt="moon" />
    </Switch>
</header>

<script src="/src/scripts/client/theme.ts"></script>

<style lang="stylus">
header
    display flex
    align-items center
    justify-content space-between
    height var(--line-height-8)
    padding .5em 1em
    a.logo
        display flex
        img.logo
            width var(--font-size-8)
            height var(--font-size-8)
</style>

<style lang="stylus" is:global>
#header-theme-switch+label
    --primary-6 var(--pinkpurple-6)
    --gray-4 var(--gold-3)
    svg
        background unset
    svg[alt=sun]
        color s('rgb(%s)'%var(--orangered-10))
        filter drop-shadow(0 0 3px s('rgb(%s)'%var(--red-6)))
        opacity 1
    svg[alt=moon]
        opacity 0
#header-theme-switch:checked+label
    svg[alt=sun]
        opacity 0
    svg[alt=moon]
        color s('rgb(%s)'%var(--arcoblue-10))
        filter drop-shadow(0 0 3px s('rgb(%s)'%var(--blue-6)))
        opacity 1
</style>
