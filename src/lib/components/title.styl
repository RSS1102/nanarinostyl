@import './../variable/prefix.styl'
@import './../variable/functions.styl'

set_subtitle(size=1)
    .{prefix}-title-subtitle
        margin-left var(--font-offset-parent)
        line-height var(_get_var_by(
            line-height,
            size
        ))
        font-size var(_get_var_by(
            font-size,
            size
        ))
        vertical-align bottom
        color _rgb(var(_get_var_by('gray', 7)))

set_has_prefix()
    &.{prefix}-title-has-prefix
        position relative
        padding-left calc(var(--font-offset-parent) * 3)

        &::before
            position absolute
            content ""
            width 4px
            border-radius var(--border-radius-sm)
            left 0
            top var(--font-offset-parent)
            bottom var(--font-offset-parent)
            background-color _rgb(var(--primary-6))


.{prefix}-title
    mixin_line_clamp(1)
    height var(--line-height-body)
    line-height @height
    font-size var(--font-size-body)
    font-weight normal
    margin 1em 0
    set_subtitle()
    set_has_prefix()

    for i in range(1 6)
        /h{i}&
        /&-h{i}
            mixin_line_clamp(1)
            height var(_get_var_by(
                line-height,
                'h%s' % i
            ))
            line-height @height
            font-size var(_get_var_by(
                font-size,
                'h%s' % i
            ))
            font-weight @font-weight
            margin @margin
            set_subtitle(size= 7 - i)
            set_has_prefix()
        
