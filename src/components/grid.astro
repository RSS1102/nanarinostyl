---
interface Props {
    inline?: boolean;
    gap?: string;
}
---

<div style={{
    display: `${Astro.props.inline ? 'inline-' : ''}grid`,
    gap: Astro.props.gap || '1em'
}}>
    <slot />
</div>

<style lang="stylus">
div
    @media screen and (min-width: 768px) 
        grid-template-columns 1fr 1fr
  
    @media screen and (min-width: 1280px) 
        grid-template-columns repeat(4, 1fr)
</style>
