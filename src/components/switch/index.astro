---
import prefix from "src/scripts/server/prefix";
const props = Astro.props;
interface Props {
    primary?: "success"|"danger"|"warning";
    id: string;
    checked?: boolean;
    disabled?: boolean;
    sm?: boolean;
    style?: Record<string, any> | string;
}
---

<span
    class:list={{
        [`${prefix}-switch`]: true,
        sm: props.sm,
    }}
    style={props.style}
    data-primary={props.primary}
>
    <input
        type="checkbox"
        id={props.id}
        checked={props.checked}
        disabled={props.disabled}
    />
    <label class={`${prefix}-switch-mover`} for={props.id}><slot /></label>
</span>
