@import './../variable/prefix.styl'
@import './../variable/functions.styl'

mask-color()
    color _rgb(var(--white))
    --primary-2 var(--gray-4)
    --primary-5 var(--gray-2)
    --primary-6 var(--white)

.{prefix}-image
    position relative
    box-sizing border-box
    background-repeat no-repeat
    background-size cover
    background-position center center
    overflow hidden
    &>img
        // -webkit-user-drag none
        width 100%
        height 100%
        object-fit @background-size
        object-position @background-position
    &-mask
        opacity 0
        transition opacity .5s
        position absolute
        z-index 2
        inset 0
        mask-color()
        background _rgb(var(--black) \/ 0.5)
        display flex
        align-items center
        justify-content center
        &:hover
            opacity 1
    &-footer
        height 64px
        padding 9px 16px
        box-sizing border-box
        position absolute
        z-index 2
        bottom 0
        left 0
        right 0
        mask-color()
        background linear-gradient(180deg, transparent 0%, transparent 0%, _rgb(var(--black)) 100%, _rgb(var(--black)) 100%)
        display flex
        align-items center
        gap 16px

        &>&-content
            height 100%
            display flex
            flex-direction column
            justify-content space-around
            flex 1
            word-break break-all
            .{prefix}-title, .{prefix}-paragraph
                margin 0
        
        &>&-action
            display flex
            align-items center
            gap 16px
