@import './functions.styl'

:root
    /**
     * 边框
     */
    --box-shadow-divider-left-lv1 inset 1px 0 0 0 _rgb(var(--gray-4) \/ 25%)
    --box-shadow-divider-top-lv1 inset 0 1px 0 0 _rgb(var(--gray-4) \/ 25%)
    --box-shadow-divider-right-lv1 inset -1px 0 0 0 _rgb(var(--gray-4) \/ 25%)
    --box-shadow-divider-bottom-lv1 inset 0 -1px 0 0 _rgb(var(--gray-4) \/ 25%)

    --box-shadow-divider-left-lv2 inset 1px 0 0 0 _rgb(var(--gray-6) \/ 25%)
    --box-shadow-divider-top-lv2 inset 0 1px 0 0 _rgb(var(--gray-6) \/ 25%)
    --box-shadow-divider-right-lv2 inset -1px 0 0 0 _rgb(var(--gray-6) \/ 25%)
    --box-shadow-divider-bottom-lv2 inset 0 -1px 0 0 _rgb(var(--gray-6) \/ 25%)

    --box-shadow-divider-left-lv3 inset 1px 0 0 0 _rgb(var(--black) \/ 25%)
    --box-shadow-divider-top-lv3 inset 0 1px 0 0 _rgb(var(--black) \/ 25%)
    --box-shadow-divider-right-lv3 inset -1px 0 0 0 _rgb(var(--black) \/ 25%)
    --box-shadow-divider-bottom-lv3 inset 0 -1px 0 0 _rgb(var(--black) \/ 25%)

    /**
     * 外阴影
     */
    --box-shadow-drop-top-lv1 0 -14px 40px 12px _rgb(var(--gray-2) \/ .6), 0 -10px 6px 0 _rgb(var(--gray-2) \/ .8), 0 -6px 14px -6px _rgb(var(--gray-2))
    --box-shadow-drop-top-lv2 0 -10px 28px 8px _rgb(var(--gray-3) \/ .4), 0 -6px 16px 0 _rgb(var(--gray-3) \/ .6), 0 -3px 6px -2px _rgb(var(--gray-3) \/ .8)
    --box-shadow-drop-top-lv3 0 -6px 12px 4px _rgb(var(--gray-4) \/ .3), 0 -3px 28px 0 _rgb(var(--gray-4) \/ .5), 0 -1px 2px -1px _rgb(var(--gray-4) \/ .7)

    --box-shadow-drop-left-lv1 -14px 0 40px 12px _rgb(var(--gray-2) \/ .6), -10px 0 28px 0 _rgb(var(--gray-2) \/ .8), -6px 0 14px -6px _rgb(var(--gray-2))
    --box-shadow-drop-left-lv2 -10px 0 28px 8px _rgb(var(--gray-3) \/ .4), -6px 0 16px 0 _rgb(var(--gray-3) \/ .6), -3px 0 6px -2px _rgb(var(--gray-3) \/ .8)
    --box-shadow-drop-left-lv3 -6px 0 12px 4px _rgb(var(--gray-4) \/ .3), -3px 0 6px 0 _rgb(var(--gray-4) \/ .5), -1px 0 2px -1px _rgb(var(--gray-4) \/ .7)
    
    --box-shadow-drop-right-lv1 14px 0 40px 12px _rgb(var(--gray-2) \/ .6), 10px 0 28px 0 _rgb(var(--gray-2) \/ .8), 6px 0 14px -6px _rgb(var(--gray-2))
    --box-shadow-drop-right-lv2 10px 0 28px 8px _rgb(var(--gray-3) \/ .4), 6px 0 16px 0 _rgb(var(--gray-3) \/ .6), 3px 0 6px -2px _rgb(var(--gray-3) \/ .8)
    --box-shadow-drop-right-lv3 6px 0 12px 4px _rgb(var(--gray-4) \/ .3), 3px 0 6px 0 _rgb(var(--gray-4) \/ .5), 1px 0 2px -1px _rgb(var(--gray-4) \/ .7)
    
    --box-shadow-drop-bottom-lv1 0 14px 40px 12px _rgb(var(--gray-2) \/ .6), 0 10px 28px 0 _rgb(var(--gray-2) \/ .8), 0 6px 14px -6px _rgb(var(--gray-2))
    --box-shadow-drop-bottom-lv2 0 10px 28px 8px _rgb(var(--gray-3) \/ .4), 0 6px 16px 0 _rgb(var(--gray-3) \/ .6), 0 3px 6px -2px _rgb(var(--gray-3) \/ .8)
    --box-shadow-drop-bottom-lv3 0 6px 12px 4px _rgb(var(--gray-4) \/ .3), 0 3px 6px 0 _rgb(var(--gray-4) \/ .5), 0 1px 2px -1px _rgb(var(--gray-4) \/ .7)
