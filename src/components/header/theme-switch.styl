@import '../../lib/variable/functions.styl'
@import '../../lib/variable/compatible.styl'

.header-theme-switch
    // 打开阴影颜色
    --primary-6 var(--orangered-6)
    // 关闭阴影颜色
    --gray-4 var(--blue-6)
    // 阴影大小
    --box-shadow-width-switch 48px

#header-theme-switch+label
    // 打开按钮颜色 如果不覆盖 按钮和阴影同色（即上面的 `--orangered-6` ）
    --primary-6 var(--pinkpurple-6)
    // 关闭按钮颜色 如果不覆盖 按钮和阴影同色（即上面的 `--blue-6` ）
    --gray-4 var(--gold-3)
    
    i
        background unset
    svg
        width 100%
        height 100%
        will-change transform
        filter drop-shadow(0 0 2px _rgb(var(--box-shadow-color-switch)))
    i.sun
        // 打开按钮 字体颜色
        color _rgb(var(--orangered-10))
        opacity 1
    i.moon
        // 关闭按钮 字体颜色
        color _rgb(var(--blue-10))
        opacity 0

#header-theme-switch:checked+label
    i.sun
        opacity 0
    i.moon
        opacity 1
        // 兼容不支持 `:has()` 选择器的如UC浏览器
        @supports not (_selector(':has(*)'))
            --box-shadow-color-switch var(--blue-6) 
