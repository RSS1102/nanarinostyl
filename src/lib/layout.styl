@import './variable/prefix.styl'

.{prefix}-layout
    display flex
    flex-direction column
    flex 1
    --box-shadow-color var(--gray-6)
    &[data-has-aside]
        flex-direction row
    &-content
        flex 1
    &-aside
        &:first-child
            --box-shadow-color @--box-shadow-color
            box-shadow var(--box-shadow-divider-right)
        &:last-child
            --box-shadow-color @--box-shadow-color
            box-shadow var(--box-shadow-divider-left)
        &[data-folded]
            /**
             * 不使用 width->0 padding->0 过渡动画 因为滚动条的消失是突变的
             */
            flex 0
            padding 0 !important
            /**
             * overflow-x hidden
             * overflow-y hidden
             * overflow-x auto
             * overflow-y auto
             * 不知道什么原理 实际上面任意一条单独都能使 `aside[data-folded]` 实际宽度为0
             */
            overflow hidden
    &-header
        --box-shadow-color @--box-shadow-color
        box-shadow var(--box-shadow-divider-bottom)
    &-footer
        --box-shadow-color @--box-shadow-color
        box-shadow var(--box-shadow-divider-top)
