body
    margin 0
    display flex
    place-items center
    min-width 320px
    min-height 100vh
#app
    max-width 1280px
    margin 0 auto
    padding 2rem
    text-align center
a.logo
    display inline-block
    position relative
    &.own:hover
        filter drop-shadow(0 0 2em unquote("rgba(var(--green-3), .6)"))
    img
        height 6em
        padding 1.5em
        will-change filter
        transition filter 300ms
    &[href='https://stylus-lang.com/']::after
        position absolute
        inset 0
        content ''
        filter blur(3em)
        background-image linear-gradient(-45deg, unquote("rgba(var(--lime-7), .3)"), 30%, unquote("rgba(var(--yellow-3), .3)"))