---
import prefix from "src/scripts/prefix";
import { Icon } from "astro-icon";
import unknow from "src/assets/images/unknow.png";
import "./../image/err.styl";

const props = Astro.props;
---

<span class={`${prefix}-image`} style="display: inline-flex">
    <img {...props} ondragstart="return false" onerror={`
        this.src='${unknow}';
        this.parentElement.dataset.error=true;
        this.onerror='return false'
    `}/>
    <span class={`${prefix}-image-mask`}>
        <Icon width="24px" name="interactive-button/outline/eye" role="img" aria-label="eye" onclick={`window.open('${props?.src}')`}/>
        <Icon width="24px" name="interactive-button/outline/eye-invisible" role="img" aria-label="eye-invisible" />
    </span>
</span>
