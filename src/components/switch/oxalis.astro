---
import Switch from "./index.astro";
const props = Astro.props;
interface Props {
    id: string
}
---

<Switch
    id={props.id}
    class="oxalis-switch"
    checked
    style={{
        ["--size-switch"]: "48px",
        ["--padding-switch"]: "4px",
        ["--color-switch-checked"]: "var(--lime-6)",
        ["--color-switch-checked-disabled"]: "var(--lime-3)",
        ["--color-switch"]: "var(--gold-3)",
    }}
>
    <span class="oxalis-switch-mover">â˜˜</span>
</Switch>
<style lang="stylus">
    .oxalis-switch>:global(input:checked+label)
        :global(.oxalis-switch-mover)
            transform rotate(360deg)
</style>
