@import './../variable/prefix.styl'
@import './../variable/functions.styl'

.{prefix}-link
    border none
    background none
    padding unset
    cursor pointer
    text-decoration none
    color _rgb(var(--primary-6))
    &:hover
        color _rgb(var(--primary-5))
    &:focus
        color _rgb(var(--primary-7))
    &[disabled]
        color _rgb(var(--primary-2))
        cursor not-allowed
        // pointer-events none
    &:focus-visible
        outline-color _rgb(var(--outline-color-focus))
        border-radius var(--border-radius-sm)
