@import './../variable/prefix.styl'
@import './../variable/functions.styl'
@import './../variable/compatible.styl'

.{prefix}-button
    --padding-cell 5px 12px


    cursor pointer
    user-select none
    padding var(--padding-cell)
    font-size var(--font-size-body)
    line-height var(--line-height-body)
    border-radius var(--border-radius-md)
    border none
    background-color _rgb(var(--gray-2))
    transition background 0.8s

    &[disabled]
        cursor not-allowed
        color _rgb(var(--gray-5))
        background-color _rgb(var(--gray-1))
    &:not([disabled]):hover
        background-color _rgb(var(--gray-3))
    &:not([disabled]):focus
        background _rgb(var(--gray-2)) radial-gradient(circle, transparent 1%, _rgb(var(--gray-2)) 1%) center/15000%
    &:not([disabled]):active
        background-color _rgb(var(--gray-4))
        background-size 100%
        transition background 0s

    &[data-primary]
        color var(--white)
        background-color _rgb(var(--primary-5))
        &[disabled]
            color _rgb(var(--gray-1))
            background-color _rgb(var(--primary-2))
        &:not([disabled]):hover
            background-color _rgb(var(--primary-6))
        &:not([disabled]):focus
            background _rgb(var(--primary-5)) radial-gradient(circle, transparent 1%, _rgb(var(--primary-5)) 1%) center/15000%
        &:not([disabled]):active
            background-color _rgb(var(--primary-7))
            background-size 100%
            transition background 0s
    &.sm
        --padding-cell 1px 8px
    &.lg
        --padding-cell 8px 16px
