@import './../variable/prefix.styl'
@import './../variable/functions.styl'

set_title_styl(size=6)
    mixin_line_clamp(1)
    font-weight normal
    margin 1em 0
    height var(_get_var_by(
        line-height,
        'h%s' % size
    ))
    line-height @height
    font-size var(_get_var_by(
        font-size,
        'h%s' % size
    ))
    
    .{prefix}-title-subtitle
        margin-left var(--font-offset-parent)
        line-height var(_get_var_by(
            line-height,
            7 - size
        ))
        font-size var(_get_var_by(
            font-size,
            7 - size
        ))
        vertical-align bottom
        color _rgb(var(_get_var_by('gray', 7)))

set_has_prefix()
    &[data-has-prefix]
        position relative
        padding-left calc(var(--font-offset-parent) * 3)

        &::before
            position absolute
            content ""
            width 4px
            border-radius var(--border-radius-sm)
            left 0
            top var(--font-offset-parent)
            bottom var(--font-offset-parent)
            background-color _rgb(var(--primary-6))


.{prefix}-title
    font-weight normal
    margin 1em 0
    set_title_styl()
    set_has_prefix()

    for i in range(1 6)
        /h{i}&
            set_title_styl(i)
            set_has_prefix()
        &[data-size=h{i}]
            set_title_styl(i)
