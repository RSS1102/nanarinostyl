---
import prefix from "src/scripts/server/prefix";
import escape from "src/scripts/server/escape";
const props = Astro.props;
let code: string = "";
if (Astro.slots.has("default")) {
    code = escape(await Astro.slots.render("default"));
}
---

<code class={`${prefix}-code ${prefix}-font-mono`} {...props}
    ><Fragment set:html={code} /></code
>
