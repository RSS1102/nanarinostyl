@import '../../lib/variable/functions.styl'
@import '../../lib/variable/compatible.styl'

.header-theme-switch
    // 打开阴影颜色
    --box-shadow-color-switch var(--orangered-6)
    // 关闭阴影颜色
    --box-shadow-color-switch-checked var(--blue-6)
    // 阴影大小
    --box-shadow-width-switch 48px

    // 打开按钮颜色
    --color-switch-checked var(--pinkpurple-6)
    // 关闭按钮颜色 
    --color-switch var(--gold-3)

#header-theme-switch+label
    
    i
        background unset
    svg
        width 100%
        height 100%
        
    i:first-child
        // 打开按钮 字体颜色
        color _rgb(var(--orangered-10))
        opacity 1
        svg
            filter drop-shadow(0 0 2px _rgb(var(--gold-6)))
    i:last-child
        // 关闭按钮 字体颜色
        color _rgb(var(--blue-10))
        opacity 0
        svg
            filter drop-shadow(0 0 2px _rgb(var(--blue-6)))

#header-theme-switch:checked+label
    i:first-child
        opacity 0
    i:last-child
        opacity 1
        // 兼容不支持 `:has()` 选择器的如UC浏览器
        @supports not (_selector(':has(*)'))
            --box-shadow-color-switch var(--blue-6) 
