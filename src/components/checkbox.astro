---
import prefix from "src/scripts/prefix";
import attrs from "src/scripts/server/attrs";
const props = Astro.props;
interface Props {
    id: string;
    title?: string;
    name?: string;
    checked?: boolean;
    disabled?: boolean;
    class?: string;
    style?: Record<string, any> | string;
    dataList?: Record<string, any>;
    onchange?: string;
}
---

<span
    class={`${prefix}-checkbox ${props.class || ''}`}
    style={props.style}
    {...attrs(props.dataList || {})}
>
    <input
        type="checkbox"
        class={`${prefix}-input`}
        id={props.id}
        name={props.name||props.id}
        checked={props.checked}
        disabled={props.disabled}
        onchange={props.onchange}
    />
    <label 
        class={`${prefix}-checkbox-label`}
        for={props.id}
        title={props.title||props.id}
    ><slot /></label>
</span>
