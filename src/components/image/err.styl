@import './../../lib/variable/prefix.styl'

.{prefix}-image
    svg[role=button]
        font-size 24px
        cursor pointer
    
    svg[aria-disabled]
        font-size 24px
        cursor not-allowed
    
    &[data-error] svg[data-icon='interactive-button/outline/eye']
    &:not([data-error]) svg[data-icon='interactive-button/outline/eye-invisible']
        display none

