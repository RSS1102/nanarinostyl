@import './../variable/prefix.styl'
@import './../variable/functions.styl'

.{prefix}-menu
    --pading-menu-item 0.5em 1em

    margin 0 1em
    display flex
    flex-direction column
    gap 0.5em
    overflow hidden
    ul&
        padding 0
        list-style none
        li^[0]
            &-submenu
                display flex
                flex-direction column
                gap 0.5em
                ~/-submenu-title
                    line-height var(--line-height-body)
                    padding var(--pading-menu-item)
            &-item
                display grid
                cursor pointer
                background _rgb(var(--white))
                color _rgb(var(--black))
                transition background-color var(--theme-transition), color var(--theme-transition)
                border-radius var(--border-radius-md)
                a^[0]-item-link
                    line-height var(--line-height-body)
                    padding var(--pading-menu-item)
                    color inherit
                    text-decoration none
                &[data-selected]
                    background _rgb(var(--primary-6))
                    color _rgb(var(--white))
                &:not(^[0]-item[data-selected]):hover
                    color _rgb(var(--primary-6))
